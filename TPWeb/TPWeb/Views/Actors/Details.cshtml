@model TPWeb.Models.Actor

@{
    ViewBag.Title = "Détails";
}

<div>
    <h3>
        @ViewBag.Title &nbsp;&nbsp;
    <a href="@Url.Action("Edit", new { id = Model.id })" style="text-decoration:none">
        <span title="Éditer" class="glyphicon glyphicon-edit" aria-hidden="true"></span>
    </a>
    <a href="@Url.Action("Delete", new { id = Model.id })" style="text-decoration:none" class="confirm" message="Voulez-vous vraiment effacer @Model.name?">
        <span title="Supprimer" class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    </a>
    <a href="@Url.Action("Index")" style="text-decoration:none">
        <span title="Retour" class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    </a>
</h3>
<hr />
<div>
    <h3>@Html.DisplayFor(model => model.name)</h3>
</div>
<div class="row">
    <div class="col-md-2">
        <img src="@Url.Content(Model.GetAvatarURL())" class="BigPoster" />
    </div>
    <div class="col-md-8">
        <dl class="dl-horizontal details">
            <dt>@Html.DisplayNameFor(model => model.BirthDay)</dt>
            <dd>@Html.DisplayFor(model => model.BirthDay)</dd>

            <dt>@Html.DisplayNameFor(model => model.country)</dt>
            <dd>@Html.DisplayFor(model => model.country)</dd>

            <dt>Filmographie</dt>
            <dd>
                <div style="height:260px; overflow-y:auto; overflow-x:hidden;">
                    @foreach (TPWeb.Models.Movie Movie in ViewBag.ParutionsList)
                    {
                        <a href="@Url.Action("Details/" + Movie.id.ToString(), "Movies", null, "http")" style="text-decoration:none" data-toggle="tooltip" data-placement="right" title="Voir les détails de @Html.DisplayFor(model => Movie.title)">
                            <h4><img src="@Url.Content(Movie.GetPosterURL())" class="SmallAvatar"> @Html.DisplayFor(model => Movie.title)</h4>
                        </a>
                    }
                </div>
            </dd>
        </dl>
    </div>
</div>
</div>